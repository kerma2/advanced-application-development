{
  "name": "advanced-application-development",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index",
  "scripts": {
    "clean": "rimraf -rf ./build",
    "compile": "tsc",
    "build": "yarn clean && yarn compile",
    "start": "node build",
    "dev": "cross-env ts-node-dev --respawn --transpile-only --rs src",
    "lint": "eslint src tests --fix --ext .js,.jsx,.ts,.tsx,.json --no-error-on-unmatched-pattern",
    "ts-check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@la-forge-dev/eslint-config-tsx": "^1.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.31",
    "cross-env": "^7.0.3",
    "eslint": "~7.19.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.2.3"
  }
}
